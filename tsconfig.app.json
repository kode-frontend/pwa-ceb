{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "composite": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "paths": {
      "@features/*": ["features/*"],
      "@pages/*": ["pages/*"],
      "@widgets/*": ["widgets/*"],
      "@app/*": ["app/*"],
      "@entities/*": ["entities/*"],
      "@shared/*": ["shared/*"],
      "@context/*": ["context/*"],
      "@config/*": ["config/*"],
      "@components/*": ["components/*"],
    }
  },
  "include": ["src"]
}

